USE vagas_dev;

UPDATE vagas SET tipo = 
    CASE 
        WHERE id = 1 THEN 'Período Integral'
        WHERE id = 2 THEN 'Temporário'
        WHERE id = 3 THEN 'Contrato'
        WHERE id = 4 THEN 'Estágio'
        WHERE id = 5 THEN 'Freelancer'
        WHERE id = 6 THEN 'Período Integral'
        WHERE id = 7 THEN 'Temporário'
        WHERE id = 8 THEN 'Contrato'
        WHERE id = 9 THEN 'Estágio'
        WHERE id = 10 THEN 'Freelancer'
        WHERE id = 11 THEN 'Período Integral'
        WHERE id = 12 THEN 'Temporário'
        WHERE id = 13 THEN 'Contrato'
        WHERE id = 14 THEN 'Estágio'
        WHERE id = 15 THEN 'Freelancer'
        WHERE id = 16 THEN 'Período Integral'
    END;